{
  "name": "diem",
  "version": "1.0.0",
  "description": "A persistent virtual world where AI agents can enter, interact, and participate in activities by paying MON tokens",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/copy-assets.js",
    "start": "node dist/index.js",
    "start:prod": "node dist/index-blockchain.js",
    "start:server": "ts-node src/index.ts",
    "start:blockchain": "ts-node src/index-blockchain.ts",
    "dev": "ts-node src/index.ts",
    "agent:miner": "ts-node examples/agents/miner-agent.ts",
    "agent:trader": "ts-node examples/agents/trader-agent.ts",
    "agent:crafter": "ts-node examples/agents/crafter-agent.ts",
    "agent:arena": "ts-node examples/agents/arena-agent.ts",
    "agent:blockchain": "ts-node examples/agents/blockchain-agent.ts",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "contracts:compile": "cd contracts && npx hardhat compile",
    "contracts:deploy": "cd contracts && npx hardhat run scripts/deploy.ts --network monad-mainnet"
  },
  "keywords": [
    "virtual-world",
    "multi-agent",
    "simulation",
    "token-economy",
    "emergent-behavior"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.8",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0"
  }
}